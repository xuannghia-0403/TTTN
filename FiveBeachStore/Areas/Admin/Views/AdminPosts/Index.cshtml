@model PagedList.Core.IPagedList<FiveBeachStore.Models.TbPost>
@using PagedList.Core.Mvc
@{
    int CurrentPage = ViewBag.CurrentPage;
    ViewData["Title"] = "QUẢN LÝ TIN TỨC";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>DANH SÁCH TIN TỨC - Trang @CurrentPage</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item">
                        <a class="btn btn-secondary btn-sm" asp-area="Admin" asp-controller="AdminPosts" asp-action="Create">
                            <i class="fas fa-plus-square">
                            </i>
                            Thêm
                        </a>
                    </li>
                    <a class="btn btn-danger btn-sm" asp-area="Admin" asp-controller="AdminPosts" asp-action="Trash">
                        <i class="fas fa-trash">
                        </i>
                        Thùng rác
                    </a>

                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>

<!-- Main content -->
<section class="content">

    <!-- Default box -->
    <div class="card">
        <div class="card-header">
            <div class="row m-b-30">
                <div class="col-md-11">
                </div>
                <div class="col-md-1">
                    <div class="card-tools text-right">
                        <button type="button" class="btn btn-tool" data-card-widget="collapse" title="Collapse">
                            <i class="fas fa-minus"></i>
                        </button>
                    </div>
                </div>

            </div>

        </div>
        <div class="card-body p-0">
            <table class="table table-striped projects">
                <thead>
                    <tr>
                        <th style="width: 1%">
                            #
                        </th>
                        <th style="width: 24%">
                            Tiêu đề
                        </th>

                        <th style="width: 25%">
                            Ngày cập nhật
                        </th>
                        <th style="width: 24%">
                            Status
                        </th>

                        <th class="text-center" style="width:25%">
                            Chức năng
                        </th>
                        <th style="width: 1%">
                            Mã
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null)
                    {
                        foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    <input type="checkbox" />
                                </td>
                                <td>
                                    <a>
                                        @item.Title
                                    </a>
                                    <br />

                                </td>


                                <td>
                                    <a>
                                        @item.UpdatedAt
                                    </a>
                                    <br />

                                </td>
                                <td class="project-actions text-left">
                                    @if (item.Status == 1)
                                    {
                                        <a class="btn btn-success btn-sm" asp-area="Admin" asp-controller="AdminPosts" asp-action="Status" asp-route-id="@item.Id">
                                            <i class="fas fa-toggle-on">
                                            </i>
                                            On
                                        </a>
                                    }
                                    else
                                    {
                                        <a class="btn btn-danger btn-sm" asp-area="Admin" asp-controller="AdminPosts" asp-action="Status" asp-route-id="@item.Id">
                                            <i class="fas fa-toggle-off">
                                            </i>
                                            Off
                                        </a>
                                    }
                                </td>
                                <td class="project-actions text-right">

                                    <a class="btn btn-primary btn-sm" asp-area="Admin" asp-controller="AdminPosts" asp-action="Details" asp-route-id="@item.Id">
                                        <i class="fas fa-eye">
                                        </i>
                                        View
                                    </a>
                                    <a class="btn btn-info btn-sm" asp-area="Admin" asp-controller="AdminPosts" asp-action="Edit" asp-route-id="@item.Id">
                                        <i class="fas fa-pencil-alt">
                                        </i>
                                        Edit
                                    </a>
                                    <a class="btn btn-danger btn-sm" asp-area="Admin" asp-controller="AdminPosts" asp-action="Delete" asp-route-id="@item.Id">
                                        <i class="fas fa-trash">
                                        </i>
                                        Delete
                                    </a>
                                </td>
                                <td>
                                    <a>
                                        @item.Id
                                    </a>
                                    <br />

                                </td>
                            </tr>
                        }
                    }


                </tbody>
            </table>
            <div class="card-footer">
                <nav aria-label="Contacts Page Navigation">
                    <ul class="pagination justify-content-center m-0">
                        <pager class="paper-container" list="@Model" asp-area="Admin" asp-controller="AdminPosts" asp-action="Index" />
                    </ul>
                </nav>
            </div>
        </div>
        <!-- /.card-body -->
    </div>
    <!-- /.card -->

</section>

