@model FiveBeachStore.Models.TbProductSale

@{
    ViewData["Title"] = "CHỈNH SỬA GIÁ SẢN PHẨM SALE";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}



<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>CHỈNH SỬA GIÁ SẢN PHẨM SALE</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item">
                        <a class="btn btn-warning btn-sm" asp-area="Admin" asp-controller="AdminProductSales" asp-action="Index">
                            <i class="fas fa-arrow-circle-left">
                            </i>
                            Quay về
                        </a>
                    </li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>

<!-- Main content -->
<section class="content">
    <div class="row">
        <div class="col-md-12">
            <div class="card card-primary">
                <div class="card-header">
                    <h3 class="card-title">Chỉnh sửa giá sản phẩm sale</h3>

                    <div class="card-tools">
                        <button type="button" class="btn btn-tool" data-card-widget="collapse" title="Collapse">
                            <i class="fas fa-minus"></i>
                        </button>
                    </div>
                </div>
                <div class="card-body">
                    <form asp-action="Edit" asp-route-id="@Model.ProductId" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input type="hidden" asp-for="ProductId" />
                        <div class="form-group">
                            <label asp-for="ProductId" class="control-label">ProductId</label>
                            <input asp-for="ProductId" class="form-control" placeholder="ProductId" />
                            <span asp-validation-for="ProductId" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="PriceSale" class="control-label">PriceSale</label>
                            <input asp-for="PriceSale" class="form-control" placeholder="PriceSale" />
                            <span asp-validation-for="PriceSale" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Qty" class="control-label">Qty</label>
                            <input asp-for="Qty" class="form-control" placeholder="Qty" />
                            <span asp-validation-for="Qty" class="text-danger"></span>
                        </div>


                        <div class="form-group">
                            <label asp-for="NgayBd" class="control-label">NgayBd</label>
                            <input asp-for="NgayBd" class="form-control" placeholder="NgayBd" />
                            <span asp-validation-for="NgayBd" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="NgayKt" class="control-label">NgayKt</label>
                            <input asp-for="NgayKt" class="form-control" placeholder="NgayKt" />
                            <span asp-validation-for="NgayKt" class="text-danger"></span>
                        </div>
                        
                        <div class="form-group">
                            <label asp-for="Status">Status</label>
                            <select asp-for="Status" class="form-control custom-select">
                                <span asp-validation-for="Status" class="text-danger"></span>
                                <option selected disabled>@Model.Status</option>
                                <option>1</option>
                                <option>2</option>
                            </select>
                        </div>
                        <div class="form froup">
                            <div class="col-12">
                                <a class="btn btn-secondary" asp-area="Admin" asp-controller="AdminProductSales" asp-action="Index">Cancel</a>
                                <input type="submit" value="Lưu" class="btn btn-success float-right">
                            </div>
                        </div>
                    </form>
                </div>
                <!-- /.card-body -->
            </div>
            <!-- /.card -->
        </div>
    </div>
</section>

