@model FiveBeachStore.Models.TbProductOptiọn

@{
    ViewData["Title"] = "CHỈNH SỬA OPTION SẢN PHẨM";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}



<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>CHỈNH SỬA OPTION SẢN PHẨM</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item">
                        <a class="btn btn-warning btn-sm" asp-area="Admin" asp-controller="AdminProductOptiọn" asp-action="Index">
                            <i class="fas fa-arrow-circle-left">
                            </i>
                            Quay về
                        </a>
                    </li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>

<!-- Main content -->
<section class="content">
    <div class="row">
        <div class="col-md-12">
            <div class="card card-primary">
                <div class="card-header">
                    <h3 class="card-title">Chỉnh sửa Option sản phẩm</h3>

                    <div class="card-tools">
                        <button type="button" class="btn btn-tool" data-card-widget="collapse" title="Collapse">
                            <i class="fas fa-minus"></i>
                        </button>
                    </div>
                </div>
                <div class="card-body">
                    <form asp-action="Edit" asp-route-id="@Model.ProductId" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input type="hidden" asp-for="ProductId" />
                        <div class="form-group">
                            <label asp-for="ProductId" class="control-label">ProductId</label>
                            <input asp-for="ProductId" class="form-control" placeholder="ProductId" />
                            <span asp-validation-for="ProductId" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Color" class="control-label">Color</label>
                            <input asp-for="Color" class="form-control" placeholder="Color" />
                            <span asp-validation-for="Color" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Memorysize" class="control-label">Memorysize</label>
                            <input asp-for="Memorysize" class="form-control" placeholder="Memorysize" />
                            <span asp-validation-for="Memorysize" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Qty" class="control-label">Qty</label>
                            <input asp-for="Qty" class="form-control" placeholder="Qty" />
                            <span asp-validation-for="Qty" class="text-danger"></span>
                        </div>


                        <div class="form-group">
                            <label asp-for="CreatedAt" class="control-label">CreatedAt</label>
                            <input asp-for="CreatedAt" class="form-control" placeholder="CreatedAt" />
                            <span asp-validation-for="CreatedAt" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="CreatedBy" class="control-label">CreatedBy</label>
                            <input asp-for="CreatedBy" class="form-control" placeholder="CreatedBy" />
                            <span asp-validation-for="CreatedBy" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="UpdatedAt" class="control-label">UpdatedAt</label>
                            <input asp-for="UpdatedAt" class="form-control" placeholder="UpdatedAt" />
                            <span asp-validation-for="UpdatedAt" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="UpdatedBy" class="control-label">UpdatedBy</label>
                            <input asp-for="UpdatedBy" class="form-control" placeholder="UpdatedBy" />
                            <span asp-validation-for="UpdatedBy" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Status">Status</label>
                            <select asp-for="Status" class="form-control custom-select">
                                <span asp-validation-for="Status" class="text-danger"></span>
                                <option selected disabled>@Model.Status</option>
                                <option>1</option>
                                <option>2</option>
                            </select>
                        </div>
                        <div class="form froup">
                            <div class="col-12">
                                <a class="btn btn-secondary" asp-area="Admin" asp-controller="AdminProductOptiọn" asp-action="Index">Cancel</a>
                                <input type="submit" value="Lưu" class="btn btn-success float-right">
                            </div>
                        </div>
                    </form>
                </div>
                <!-- /.card-body -->
            </div>
            <!-- /.card -->
        </div>
    </div>
</section>

