@model IEnumerable<FiveBeachStore.Models.TbRole>

@{
    ViewData["Title"] = "Quản lý quyền truy cập";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>QUẢN LÝ QUYỀN TRUY CẬP</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item">
                        <a class="btn btn-secondary btn-sm" asp-area="Admin" asp-controller="AdminRole" asp-action="Create" >
                            <i class="fas fa-plus-square">
                            </i>
                            Thêm
                        </a>
                    </li>
                    <a class="btn btn-danger btn-sm" asp-area="Admin" asp-controller="AdminRole" asp-action="Trash" >
                        <i class="fas fa-trash">
                        </i>
                        Thùng rác
                    </a>
                    
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>

<!-- Main content -->
<section class="content">

    <!-- Default box -->
    <div class="card">
        <div class="card-header">       
            <div class="card-tools">
                <button type="button" class="btn btn-tool" data-card-widget="collapse" title="Collapse">
                    <i class="fas fa-minus"></i>
                </button>
                
            </div>
        </div>
        <div class="card-body p-0">
            <table class="table table-striped projects">
                <thead>
                    <tr>
                        <th style="width: 1%">
                            #
                        </th>
                        <th style="width: 20%">
                             Name
                        </th>
                        <th style="width: 48%">
                           Mô tả
                        </th>
                        <th style="width: 10%">
                            Status
                        </th>
                        <th class="text-center"style="width: 20%">
                            Chức năng
                        </th>
                        <th style="width: 1%">
                            Mã
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @if(Model!=null)
                    {
                        foreach(var item in Model)
                        {
                            <tr>
                                <td>
                                    <input type="checkbox"/>
                                </td>
                                <td>
                                    <a>
                                       @item.Name
                                    </a>
                                    <br />
                                    
                                </td>
                                <td>
                                    <a>
                                        @item.Metadesc
                                    </a>
                                    <br />

                                </td>
                                <td class="project-actions text-left">
                                    @if (item.Status == 1)
                                    {
                                        <a class="btn btn-success btn-sm" asp-area="Admin" asp-controller="AdminRole" asp-action="Status" asp-route-id="@item.Id">
                                            <i class="fas fa-toggle-on">
                                            </i>
                                            On
                                        </a>
                                    }
                                    else
                                    {
                                        <a class="btn btn-danger btn-sm" asp-area="Admin" asp-controller="AdminRole" asp-action="Status" asp-route-id="@item.Id">
                                            <i class="fas fa-toggle-off">
                                            </i>
                                            Off
                                        </a>
                                    }
                                    </td>
                                <td class="project-actions text-right">
                                   
                                    <a class="btn btn-primary btn-sm" asp-area="Admin"asp-controller="AdminRole"asp-action="Details"asp-route-id="@item.Id">
                                        <i class="fas fa-eye">
                                        </i>
                                        View
                                    </a>
                                    <a class="btn btn-info btn-sm" asp-area="Admin" asp-controller="AdminRole" asp-action="Edit" asp-route-id="@item.Id">
                                        <i class="fas fa-pencil-alt">
                                        </i>
                                        Edit
                                    </a>
                                    <a class="btn btn-danger btn-sm" asp-area="Admin" asp-controller="AdminRole" asp-action="Delete" asp-route-id="@item.Id">
                                        <i class="fas fa-trash">
                                        </i>
                                        Delete
                                    </a>
                                </td>
                                <td>
                                    <a>
                                        @item.Id
                                    </a>
                                    <br />

                                </td>
                            </tr>
                        }
                    }
                   
                    
                </tbody>
            </table>
        </div>
        <!-- /.card-body -->
    </div>
    <!-- /.card -->

</section>